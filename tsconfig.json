{
  "compilerOptions": {
	"module": "CommonJS",
	"moduleResolution": "Node",
	"target": "ESNext",
	"sourceMap": true,
	"strict": true,
	"esModuleInterop": true,
	"rootDir": ".",
	"baseUrl": ".",
	"typeRoots": [
	  "./node_modules/@types",
	  "./@types"
	]
  },
  "include": [
	"src/**/*.ts",
	"rollup.config.ts"
  ],
  "exclude": [
	"node_modules",
	"src/yare/yare-sync.ts",
	"src/**/*.mocks.ts",
	"src/**/*.test.ts"
  ]
}
